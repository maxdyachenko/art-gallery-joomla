<?xml version="1.0" encoding="UTF-8"?>
<form name="create" addrulepath="components/com_artgallery/models/rules">
    <fieldset name="create">
        <field
                name="name"
                type="text"
                label="COM_ARTGALLERY_FORM_LBL_NAME"
                class="required validate-name"
                maxlength="16"
                message="COM_ARTGALLERY_NAME_ERROR"
                required="true"
                validate="name"
        >
        </field>

        <field
                name="avatar"
                type="file"
                label="COM_ARGALLERY_FORM_LABEL_AVATAR"
                class="validate-file"
                accept="image/*"
                validate="file"
                required="true" >
        </field>

    </fieldset>
</form>